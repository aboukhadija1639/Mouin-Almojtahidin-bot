# Mouin-Almojtahidin Bot Configuration
# Copy this file to .env and fill in your actual values

# =====================================
# TELEGRAM BOT SETTINGS (REQUIRED)
# =====================================

# Your Telegram Bot Token from @BotFather
BOT_TOKEN=7615777531:AAGHmWe0lQQTqw1t_Kk45680zfU712aSSxA

# =====================================
# ADMIN CONFIGURATION (REQUIRED)
# =====================================

# Comma-separated list of admin user IDs (numbers only)
# Example: ADMIN_USER_IDS=123456789,987654321
ADMIN_USER_IDS=7778008989

# Your admin chat ID for receiving notifications (optional)
ADMIN_CHAT_ID=-1002410993759


DATABASE_URL=./data/mouin_almojtahidin.db

# =====================================
# GROUP AND CHANNEL SETTINGS (OPTIONAL)
# =====================================

# Group ID where the bot is added (for sending announcements)
GROUP_ID=-1002733159355


# Support channel username (with @ symbol)
SUPPORT_CHANNEL=@muinsupport

# =====================================
# USER SETTINGS (REQUIRED)
# =====================================

# Activation code that users need to verify their accounts
ACTIVATION_CODE=free_palestine1447

# =====================================
# ZOOM/MEETING SETTINGS (OPTIONAL)
# =====================================

# Zoom meeting link for lessons
ZOOM_LINK=https://zoom.us/j/your_meeting_id

# =====================================
# RATE LIMITING SETTINGS (OPTIONAL)
# =====================================

# Enable/disable rate limiting (true/false)
RATE_LIMITING_ENABLED=true

# Maximum requests per minute per user
MAX_REQUESTS_PER_MINUTE=30

# Maximum requests per hour per user
MAX_REQUESTS_PER_HOUR=100

WEBHOOK_DOMAIN=http://localhost:3000
PORT=3000


NODE_ENV=development

# =====================================
# DATABASE SETTINGS (AUTOMATIC)
# =====================================

# Database files are automatically created in ./data/ directory
# No configuration needed for SQLite

# =====================================
# LOGGING SETTINGS (AUTOMATIC)
# =====================================

# Log files are automatically created in ./data/ directory
# combined.log - All activities
# error.log - Errors only

# =====================================
# EXAMPLE CONFIGURATION
# =====================================

# Here's an example of how your .env file should look:
#
# BOT_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefgh
# ADMIN_USER_IDS=123456789,987654321
# ADMIN_CHAT_ID=123456789
# GROUP_ID=-1001234567890
# SUPPORT_CHANNEL=@MouinSupport
# ACTIVATION_CODE=MOUIN2024
# ZOOM_LINK=https://zoom.us/j/1234567890
# RATE_LIMITING_ENABLED=true
# MAX_REQUESTS_PER_MINUTE=30
# MAX_REQUESTS_PER_HOUR=100

# =====================================
# SECURITY NOTES
# =====================================

# 1. Never commit your .env file to version control
# 2. Keep your bot token secret
# 3. Use strong activation codes
# 4. Regularly update your admin user IDs
# 5. Monitor the logs for suspicious activity

# =====================================
# GETTING STARTED
# =====================================

# 1. Create a new bot with @BotFather on Telegram
# 2. Copy the bot token to BOT_TOKEN
# 3. Get your user ID by messaging @userinfobot
# 4. Add your user ID to ADMIN_USER_IDS
# 5. Set a secure ACTIVATION_CODE
# 6. Fill in other optional settings as needed
# 7. Save as .env and start the bot with: npm start